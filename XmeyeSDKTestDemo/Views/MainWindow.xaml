<ui:FluentWindow x:Class="XmeyeSDKTestDemo.Views.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:view="clr-namespace:XmeyeSDKTestDemo.Views"
                 xmlns:vm="clr-namespace:XmeyeSDKTestDemo.ViewModels"
                 Width="1000"
                 Height="850"
                 MinWidth="650"
                 MinHeight="500"
                 d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
                 ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
                 ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                 ExtendsContentIntoTitleBar="True"
                 Loaded="MainWindow_Loaded"
                 Unloaded="MainWindow_UnLoaded"
                 Visibility="Visible"
                 WindowBackdropType="Mica"
                 WindowCornerPreference="Default"
                 WindowStartupLocation="CenterScreen"
                 mc:Ignorable="d">
  <Grid>

    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <ui:TitleBar x:Name="TitleBar"
                 Title="{Binding AppTitle, Mode=OneWay}"
                 Grid.Row="0"
                 Height="Auto"
                 Margin="0,0,0,0"
                 VerticalAlignment="Center"
                 VerticalContentAlignment="Center"
                 CloseWindowByDoubleClickOnIcon="True">
      <ui:TitleBar.Header>
        <StackPanel Margin="-5,0,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
          <ui:TextBlock Text="{Binding ElementName=TitleBar, Path=Title}" />
          <ui:TextBlock Margin="2,0,0,0" Text="{Binding AppVersion, Mode=OneWay}" />
          <ui:TextBlock Margin="2,0,0,0" Text="{Binding AppVersionType, Mode=OneWay}" />
        </StackPanel>
      </ui:TitleBar.Header>
      <ui:TitleBar.Icon>
        <ui:ImageIcon Source="/Assets/AppIcon.png" />
      </ui:TitleBar.Icon>
    </ui:TitleBar>

    <ui:NavigationView x:Name="NavigationView"
                       Grid.Row="1"
                       Padding="42,0,42,0"
                       IsBackButtonVisible="Collapsed"
                       IsPaneToggleVisible="True"
                       PaneDisplayMode="LeftFluent"
                       Transition="FadeInWithSlide">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="相机" TargetPageType="view:CameraPage">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Camera24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.ContentOverlay>
        <Grid>
          <ui:SnackbarPresenter x:Name="SnackbarPresenter" />
        </Grid>
      </ui:NavigationView.ContentOverlay>
    </ui:NavigationView>

    <ui:ContentDialogHost x:Name="RootContentDialog" Grid.Row="1" />

  </Grid>
</ui:FluentWindow>
